- if talk.video?
  .span4.box-video
    - if defined?(embed)
      = video_thumb(talk)
    - else
      = link_to video_thumb_image(talk), talk.event

    - if defined?(embed)
      h2 = talk.title
    - else
      h2 = link_to talk.title, talk.event
    - if talk.user
      p
        = t('keywords.by')
        |  #{talk.user.name}
- elsif talk.audio?
  .box-audio
    = audio_thumb(talk)
    h2 = talk.title
    - if talk.user
      p
        = t('keywords.by')
        |  #{talk.user.name}
- elsif talk.no_media?
    h2 = talk.title
    - if talk.user
      p
        = t('keywords.by')
        |  #{talk.user.name}
